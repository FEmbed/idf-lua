{
  "name": "lua",
  "version": "0.1.0",
  "description": "The Lua programming language bindings and Sol2 for PlatformIO",
  "authors": {
	"name": "Nick Owens",
	"email": "mischief@offblast.org",
	"url": "https://github.com/mischief/"
  },
  "repository": {
	"type": "git",
	"url": "https://github.com/mischief/arduino-lua.git"
  },
  "keywords": ["lua", "sol", "sol2"],
  "license": "MIT",
  "frameworks": "*",
  "platforms": "*",
  "headers": ["lua.hpp"],
  "build": {
    "srcDir": "src",
    "includeDir": "include",
    "flags": [
      "-Iinclude",
      "-Isrc"
    ],
    "srcFilter": [
      "+<lapi.c>",
      "+<lcode.c>",
      "+<lctype.c>",
      "+<ldebug.c>",
      "+<ldo.c>",
      "+<ldump.c>",
      "+<lfunc.c>",
      "+<lgc.c>",
      "+<llex.c>",
      "+<lmem.c>",
      "+<lobject.c>",
      "+<lopcodes.c>",
      "+<lparser.c>",
      "+<lstate.c>",
      "+<lstring.c>",
      "+<ltable.c>",
      "+<ltm.c>",
      "+<lundump.c>",
      "+<lvm.c>",
      "+<lzio.c>",
      "+<ltests.c>",
      "+<lauxlib.c>",
      "+<lbaselib.c>",
      "+<ldblib.c>",
      "+<liolib.c>",
      "+<lmathlib.c>",
      "+<loslib.c>",
      "+<ltablib.c>",
      "+<lstrlib.c>",
      "+<lutf8lib.c>",
      "+<loadlib.c>",
      "+<lcorolib.c>",
      "+<linit.c>"
    ]
  }
}

